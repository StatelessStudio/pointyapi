{
	"name": "pointyapi",
	"version": "1.1.0",
	"author": "stateless-studio",
	"license": "MIT",
	"scripts": {
		"start": "tsc --p tsconfig.json && node lib/test/examples/basic/server.js",
		"build": "tsc --p tsconfig.json",
		"build:spec": "tsc --p tsconfig.json && tsc --p tsconfig.spec.json",
		"postinstall": "tsc --p tsconfig.dist.json",
		"test": "npm run build:spec && npm run coverage && npm run test-examples",
		"test-examples": "npm run test:jasmine-basic && npm run test:jasmine-guards && npm run test:jasmine-chat && npm run test:jasmine-terms",
		"test:jasmine-api": "npm run db:drop && jasmine --config=test/jasmine.api.json",
		"test:jasmine-basic": "npm run db:drop && jasmine --config=test/jasmine.basic.json",
		"test:jasmine-guards": "npm run db:drop && jasmine --config=test/jasmine.guards.json",
		"test:jasmine-chat": "npm run db:drop && jasmine --config=test/jasmine.chat.json",
		"test:jasmine-terms": "npm run db:drop && jasmine --config=test/jasmine.terms.json",
		"db:drop": "typeorm schema:drop -f orm-cli",
		"doc": "typedoc --out docs src --excludeNotExported",
		"coverage": "npm run db:drop && nyc npm run coverage-test",
		"coverage-test": "jasmine --config=test/jasmine.api.json",
		"coveralls": "cat ./coverage/lcov.info | coveralls"
	},
	"dependencies": {
		"@types/atob": "^2.1.1",
		"@types/btoa": "^1.2.2",
		"@types/express": "^4.16.1",
		"@types/jasmine": "^2.8.16",
		"@types/jsonwebtoken": "^7.2.8",
		"@types/node": "^10.12.29",
		"@types/request": "^2.48.1",
		"atob": "^2.1.2",
		"bcryptjs": "^2.4.3",
		"btoa": "^1.2.1",
		"class-validator": "^0.9.1",
		"express": "^4.16.4",
		"jasmine": "^3.3.1",
		"jsonwebtoken": "^8.5.0",
		"mock-req-res": "^1.0.3",
		"pg": "^7.8.1",
		"pg-connection-string": "^2.0.0",
		"reflect-metadata": "^0.1.13",
		"request": "^2.88.0",
		"sinon": "^7.2.7",
		"tslint": "^5.13.1",
		"tslint-eslint-rules": "^5.4.0",
		"typeorm": "^0.2.14",
		"typescript": "^3.3.3333",
		"validator": "^10.11.0"
	},
	"main": "./index.js",
	"types": "./index.d.ts",
	"devDependencies": {
		"coveralls": "^3.0.3",
		"istanbul": "^0.4.5",
		"nyc": "^13.3.0",
		"source-map-support": "^0.5.10",
		"ts-node": "^7.0.1",
		"typedoc": "^0.13.0"
	},
	"nyc": {
		"reporter": [
			"lcov",
			"text-summary",
			"html"
		],
		"exclude": [
			"**/*.spec.js",
			"**/examples/**"
		]
	}
}
