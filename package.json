{
	"name": "MY_APP",
	"version": "1.0.0",
	"ts-project-version": "1.0.0",
	"main": "dist/main.js",
	"types": "dist/main.d.ts",
	"scripts": {
		"start": "npm run dev",
		"dev": "npm run lint && ts-node src/main.ts",
		"test": "npm run build:spec && npm run coverage",
		"build": "npm run build:prod",
		"build:spec": "npm run lint && tsc --p tsconfig.spec.json",
		"build:prod": "npm run lint:prod && tsc --p tsconfig.json",
		"doc": "typedoc --out docs src --excludeNotExported",
		"lint": "eslint . --ext .ts --fix",
		"lint:prod": "npm run lint && eslint . --ext .ts --config=.eslintrc.prod.json",
		"coverage": "nyc npm run coverage-test",
		"coverage-test": "jasmine --config=jasmine.json",
		"coveralls": "cat ./coverage/lcov.info | coveralls"
	},
	"directories": {
		"test": "test"
	},
	"files": [
		"dist/*"
	],
	"dependencies": {
		"dotenv": "^8.2.0"
	},
	"devDependencies": {
		"@istanbuljs/nyc-config-typescript": "^1.0.1",
		"@types/jasmine": "^3.5.14",
		"@types/node": "^12.12.58",
		"@typescript-eslint/eslint-plugin": "^4.4.0",
		"@typescript-eslint/parser": "^4.4.0",
		"coveralls": "^3.1.0",
		"eslint": "^7.11.0",
		"jasmine": "^3.6.1",
		"nyc": "^15.1.0",
		"source-map-support": "^0.5.19",
		"ts-node": "^9.0.0",
		"typedoc": "^0.19.2",
		"typescript": "^4.0.2"
	}
}
