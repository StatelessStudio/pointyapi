{
	"compileOnSave": false,
	"compilerOptions": {
		"baseUrl": "./src/",
		"outDir": "./dist",
		"sourceMap": true,
		"declaration": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es6",
		"types": ["node"],
		"typeRoots": ["node_modules/@types", "./"],
		"lib": ["es2020"]
	},
	"exclude": [
		"./dist/"
	],
	"include": [
		"./script/",
		"./src/",
		"./test/",
		"./ts-package-config.ts"
	]
}
